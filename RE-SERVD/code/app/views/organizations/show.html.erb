<html>
<table>
  <thead>
  <tr>
    <th>Name: <%= @organization.name %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><strong>Email:</strong>
      <%= @organization.email %></td>
    <td><strong>Phone no:</strong>
      <%= @organization.phone_no %></td>
  </tr>
  <tr>
    <td class="location-tab"><strong>Address:</strong>
      <%= @organization.address %></td>
    <td class="location-tab">
      <strong>City:</strong>
      <%= @organization.city %>
    </td>
  </tr>

  <tr>
    <td>
      <strong>State:</strong>
      <%= @organization.state %>
    </td>
    <td>
      <strong>Zip code:</strong>
      <%= @organization.zip_code %>
    </td>
  </tr>

  <tr>
    <td colspan="3">
      <strong>Description:</strong>
      <%= @organization.description %>
    </td>

  </tr>

  <tr>
    <td colspan="3">
      <strong>Issue Area:</strong>
      <%= @organization.issue_area %>
    </td>

  </tr>

  <tr>
    <td colspan="3">
      <strong>Approved:</strong>
      <%= @organization.approved %>
    </td>

  </tr>
  </tbody>
</table>

<br><br>
<div style="text-align: center;">
  <div style="display: inline-block; text-align: left;">
    <div class="styledButton">
      <% if session[:user_email] == @organization.email || session[:user_type] == 0 %>
        <%= link_to 'Edit', edit_organization_path(@organization) %> |
      <% end %>
    </div>

    <div class="styledButton">
      <%= link_to 'Back', :back %>
    </div>
  </div>
</div>
</html>

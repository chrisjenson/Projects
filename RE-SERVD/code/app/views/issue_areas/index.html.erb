<p id="notice"><%= notice %></p>

<h1>Issue Areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_areas.each do |issue_area| %>
      <tr>
        <td><%= issue_area.name %></td>
        <td><%= link_to 'Show', issue_area %></td>
        <td><%= link_to 'Edit', edit_issue_area_path(issue_area) %></td>
        <td><%= link_to 'Destroy', issue_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue Area', new_issue_area_path %>
